<%- include('partials/header') %>

<div class="dashboard-container">
    <%- include('partials/sidebar') %>

    <div class="main-content">
        <%- include('partials/topbar') %>

        <% if (message) { %>
            <div class="form-group">
                <div class="alert alert-<%= status && status == 'success' ? 'primary' : 'danger' %>" role="alert">
                    <strong>Alert:</strong> <%= message %>
                </div>
            </div>
        <% } %>

        <div class="stats">
            <div class="stat-box">
                <h3>Users</h3>
                <p>120</p>
            </div>
            <div class="stat-box">
                <h3>Posts</h3>
                <p>350</p>
            </div>
            <div class="stat-box">
                <h3>Messages</h3>
                <p>45</p>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
