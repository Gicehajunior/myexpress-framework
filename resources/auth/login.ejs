<%- include('partials/header') %>

<div class="login-container">
    <div class="brand-logo">MyExpress</div>
    <h4 class="text-center mt-3">Welcome Back</h4>
    <p class="text-center text-muted">Login to your account</p>

    <% if (message.length > 0) { %>
        <div class="form-group">
            <div class="alert alert-<%= status && status == 'success' ? 'primary' : 'danger' %>" role="alert">
                <strong>Alert:</strong> <%= message %>
            </div>
        </div>
    <% } %>
    
    <form class="login-user-form" action="/login" method="POST">
        <div class="mb-3">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" value="gicehajunior76@gmail.com" name="email" id="email" class="form-control" placeholder="Enter email" required>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" value="gicehajunior76@gmail.com" name="password" id="password" class="form-control" placeholder="Enter password" required>
        </div>

        <div class="d-grid">
            <button type="button" class="btn btn-custom login-btn" id="login-btn">Login</button>
        </div>
    </form>

    <p class="text-center mt-3">
        Don't have an account? <a href="/register">Sign Up</a>
    </p>
</div>

<!-- scripts -->
<script src="default/js/src/auth.js?v1"></script>
<!-- /scripts -->

<%- include('partials/footer') %>
